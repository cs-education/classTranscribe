<body>
    <form id="settings-form" method="POST" action="/settings/submit">
        <div class="container">
            <h1>SETTINGS</h1>
            <h2>You can edit first and last name or change password.</h2>
            <input type="text" placeholder="First Name" value={{first_name}} name="first_name" required> <br>
            <input type="text" placeholder="Last Name" value={{last_name}} name="last_name" required> <br>
            <button type="submit" class="settings-submit">Save Profile</button>
        </div>
    </form>
